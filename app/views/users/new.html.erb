<% provide(:title, 'Cadastro') %>
<h1>Cadastro</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :nome %>
        <%= f.text_field :nome, class: 'form-control' %><br>

        <%= f.label :cpf %>
        <%= f.number_field :cpf, class: 'form-control' %><br>

        <%= f.label :matricula %>
        <%= f.number_field :matricula, class: 'form-control' %><br>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %><br>

        <%= f.label :password, "Senha" %>
        <%= f.password_field :password, class: 'form-control' %><br>

        <%= f.label :password_confirmation, "Confirme a senha" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %><br>

        <%= f.submit "Criar conta", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

